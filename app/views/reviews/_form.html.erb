<%= form_for([@stadium, @review]) do |f| %>
<%= render "shared/errors", object: @review %>
<fieldset>
  <ol>
    <li class="required">
      <%= f.label :name %><br/>
      <%= f.text_field :name, size:40, autofocus: true %>
    </li>
   <li class="required stars">
        <%= f.label :stars %>
        <% Review::STARS.each do |star| %>
          <span class="star">
            <%= f.radio_button :stars, star %> <%= star %>
          </span>
        <% end %>     
      </li>
    <li class="required">
      <%= f.label :comment %><br/>
      <%= f.text_field :comment, cols: 80, placeholder: "What did you think?" %>
    </li>
  </ol>

  <p>
    <%= f.submit 'Post Review' %>  
    <%= link_to "Cancel", @stadium, class: 'button' %>
  </p>
</fieldset>
<% end %>